<Window x:Class="CCManager.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCManager.Views"
        xmlns:viewModel="clr-namespace:CCManager.ViewModels" 
        xmlns:customcontrols="clr-namespace:CCManager.CustomControls"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">


    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>

    <!-- Borde app -->
    <Border CornerRadius="10"
                BorderThickness="3">

        <!-- Difuminado borde -->
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.45"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <!-- Difuminado fondo -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <!-- Definir celdas de cuadricula -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="1"/>
                </Grid.ColumnDefinitions>

                <!-- Texto Login -->
                <TextBlock Text="LOGIN"
                           Foreground="DarkGray"
                           FontSize="10"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin=" 15,0,0,0"/>

                <!-- Boton minimizar -->
                <Button x:Name="btnMinimizar" 
                        BorderThickness="0"
                        Content="-"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimizar_Click">

                    <!-- Color boton minimizar -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource buttonColor1}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource buttonSecondaryColor1}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <!-- Diseño boton minimizar -->
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <!-- Boton cerrar -->
                <Button x:Name="btnCerrar"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnCerrar_Click">

                    <!-- Color boton Cerrar -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource buttonColor2}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource buttonSecondaryColor2}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <!-- Diseño boton Cerrar -->
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Elementons de inicio de sesion -->
            <!-- Logo-->
            <StackPanel Width="250"
                        Grid.Row="2"
                        Orientation="Vertical"
                        Margin="0,35,0,0" Cursor="">
                <Image x:Name="Logo" Source="/Images/LOGO CONSORCIO CIVIL 2.png"
                       Width="155" Height="104"/>

                <!-- Titulos -->
                <TextBlock Text="NOMINAS"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="16"
                           HorizontalAlignment="Center" FontWeight="Medium"/>

                <TextBlock Text="Consricio Civil"
                           Foreground="LightGray"
                           FontFamily="Montserrat"
                           FontSize="10"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>


                <!--USUARIO-->
                <TextBlock Text="Usuario"
                           Foreground="DarkGray"
                           FontFamily="Montserrat"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,40,0,0"/>

                <!--Cuadro de texto para ingresar usuario-->
                <TextBox x:Name="txtUser"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="12"
                         FontWeight="Normal"
                         FontFamily="Montserrat"
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="25,0,0,0" TextChanged="txtUser_TextChanged">
                    <!--Fondo con imagen de usuario-->
                    <TextBox.Background>
                        <ImageBrush ImageSource="/CCManager;component/Images/usuario.png"
                                    Stretch="Uniform"
                                    AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>

                <!--contraseña-->
                <TextBlock Text="Contraseña"
                           Foreground="DarkGray"
                           FontFamily="Montserrat"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="0,15,0,0"/>


                <!--Cuadro de texto para ingresar contraseña-->
                <customcontrols:BindablePasswordBox
                    Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Height="28"
                    Margin="0,5,0,0" />



                <!-- Mensaje de error -->
                <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>


                <!-- Boton inicio de sesion -->
                <Button x:Name="btnLogin"
                        Command="{Binding LoginCommand}"
                        BorderThickness="0"
                        Content="LOGIN"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,50,0,0">

                    <!-- Color boton inicio de sesion  -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource buttonLoginColor}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource buttonLoginSecondaryColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <!-- Diseño boton inicio de sesion  -->
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <TextBlock Text="Forgot Password?"
                           Foreground="DarkGray"
                           FontFamily="Montserrat"
                           FontSize="10"
                           FontWeight="Medium"/>

                    <TextBlock Text="Reset"
                           Foreground="White"
                           FontFamily="Montserrat"
                           FontSize="10"
                           FontWeight="Medium"
                           Margin="8,0,0,0"
                               Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>

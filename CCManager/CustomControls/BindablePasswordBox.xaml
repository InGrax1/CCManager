<UserControl x:Class="CCManager.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCManager.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <!--Cuadro de texto para ingresar contraseña-->
    <PasswordBox x:Name="txtPassword"
                         FontSize="12"
                         FontWeight="Normal"
                         FontFamily="Montserrat"
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,1"
                         VerticalContentAlignment="Center"
                         Padding="25,0,0,0">



        <!--Fondo con imagen de contraseña-->
        <PasswordBox.Background>
            <ImageBrush ImageSource="/CCManager;component/Images/Key.png" Stretch="Uniform" AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
